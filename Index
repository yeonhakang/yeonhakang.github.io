    <script>
        function convert() {
            const area = parseFloat(document.getElementById('area').value);
            const unit = document.getElementById('unit').value;
            const result = document.getElementById('result');
            
            if (!area || area <= 0) {
                alert('ì˜¬ë°”ë¥¸ ë©´ì ì„ ì…ë ¥í•´ì£¼ì„¸ìš”!');
                return;
            }

            let output = '';
            
            if (unit === 'pyeong') {
                const m2 = (area * 3.3058).toFixed(1);
                const ha = (area * 0.0003305).toFixed(4);
                output = `<div>${area}í‰ =</div>
                         <div>ğŸ“ ${m2}mÂ²</div>
                         <div>ğŸï¸ ${ha}ha</div>`;
            } else if (unit === 'm2') {
                const pyeong = (area * 0.3025).toFixed(1);
                const ha = (area / 10000).toFixed(4);
                output = `<div>${area}mÂ² =</div>
                         <div>ğŸ“ ${pyeong}í‰</div>
                         <div>ğŸï¸ ${ha}ha</div>`;
            } else if (unit === 'ha') {
                const m2 = (area * 10000).toFixed(0);
                const pyeong = (area * 3025).toFixed(0);
                output = `<div>${area}ha =</div>
                         <div>ğŸ“ ${m2}mÂ²</div>
                         <div>ğŸ“ ${pyeong}í‰</div>`;
            }

            result.innerHTML = output;
            result.style.display = 'block';
        }

        // ì‹¤ì‹œê°„ ì‹œê°„ ì—…ë°ì´íŠ¸
        function updateTime() {
            const now = new Date();
            const timeString = now.toLocaleString('ko-KR');
            document.title = `ğŸŒ¾ ë†ë²ˆê¸° - ${timeString}`;
        }
        
        setInterval(updateTime, 1000);
        updateTime();

        // ì—”í„°í‚¤ë¡œë„ ë³€í™˜ ê°€ëŠ¥
        document.getElementById('area').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                convert();
            }
        });
    </script>
